---
import Section from '@/components/Section.astro';

import { projects } from '@cv';


---

<Section title="Projects">
    <ul>
        {
            projects.map(({name, url, isActive, highlights, description }) => {
                return(
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a href={url} title={`ver el proyecto ${name}`}>
                                        {name}
                                    </a>
                                    {
                                        isActive && <span>&bull;</span>
                                    }
                                </h3>
                                <p>{description}</p>
                            </header>
                            <footer>
                                {
                                    highlights.map((Highlight) => {
                                        return (
                                            <span>{Highlight}</span>
                                        )
                                    })
                                }
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul{
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(200px, 1fr)
        );
        gap: 1rem;
    }
    article{
        display: flex;
        flex-direction: column;
        gap:16px;
        border:1px solid #eee;
        border-radius:8px;
        padding:16px;
        height:100%;
    }
    header{
        flex:1;
    }
    header h3{
        margin-bottom:6px;
    }
    header h3 span{
        color:green;
    }
    header a{
        color:#111;
    }
    header a:hover{
        text-decoration: underline;
    }
    header p{
        font-size: .8rem;
        line-height: 1.2rem;
        margin-bottom:4px;
    }
    footer{
        display: inline-flex;
        gap:8px;
        flex-wrap:wrap;
    }
    footer span{
        border-radius: 6px;
        background:#f2f2f2;
        color:#666;
        font-size:.6rem;
        font-weight:500;
        padding: .4rem .6rem;
    }
</style>