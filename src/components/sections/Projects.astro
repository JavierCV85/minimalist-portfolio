---
import Section from '@/components/Section.astro';

import { projects } from '@cv';


---

<Section title="Projects">
    {
        projects.map(({name, url, isActive, highlights, description }) => {

            return(
                <li>
                    <article>
                        <header>
                            <a href={url} title={`ver el proyecto ${name}`}>
                                <h3>{name}</h3>
                            </a>
                        </header>
                    </article>
                </li>
            )
        })
    }
</Section>